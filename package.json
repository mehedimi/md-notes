{
  "name": "md-notes",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "author": "Mehedi Hasan",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true nodemon --exec electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder",
    "sqlite-rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^7.5.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "node-input-validator": "^4.5.0",
    "remove-markdown": "^0.3.0"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.5.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@vitejs/plugin-vue": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "codemirror": "^5.65.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.0.0",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "izitoast": "^1.4.0",
    "marked": "^4.0.12",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.22",
    "vite": "^2.8.0",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "wait-on": "^6.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "public/*",
      "dist/*",
      "node_modules/*"
    ]
  },
  "build": {
    "appId": "im.mehedi.md-note",
    "productName": "MD Note",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
