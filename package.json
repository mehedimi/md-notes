{
  "name": "md-notes",
  "private": true,
  "version": "0.0.0",
  "main": "./main.js",
  "author": "Mehedi Hasan",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true nodemon --exec electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder",
    "sqlite-rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^7.5.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment": "^2.29.1",
    "node-input-validator": "^4.5.0"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^0.19.15",
    "@codemirror/closebrackets": "^0.19.2",
    "@codemirror/commands": "^0.19.8",
    "@codemirror/gutter": "^0.19.9",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-css": "^0.19.3",
    "@codemirror/lang-html": "^0.19.4",
    "@codemirror/lang-javascript": "^0.19.7",
    "@codemirror/lang-json": "^0.19.2",
    "@codemirror/lang-markdown": "^0.19.6",
    "@codemirror/lang-php": "^0.19.1",
    "@codemirror/lang-sql": "^0.19.4",
    "@codemirror/language": "^0.19.10",
    "@codemirror/language-data": "^0.19.2",
    "@codemirror/legacy-modes": "^0.19.1",
    "@codemirror/state": "^0.19.9",
    "@codemirror/view": "^0.19.48",
    "@headlessui/vue": "^1.5.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@vitejs/plugin-vue": "^2.2.0",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.0.0",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "flowbite": "^1.4.2",
    "highlight.js": "^11.5.1",
    "izitoast": "^1.4.0",
    "marked": "^4.0.12",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.6",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "sass": "^1.50.0",
    "tailwindcss": "^3.0.22",
    "vite": "^2.8.0",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2",
    "wait-on": "^6.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*",
      "public/*",
      "dist/*",
      "node_modules/*"
    ]
  },
  "build": {
    "appId": "im.mehedi.md-note",
    "productName": "MD Note",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "./main.js",
      "./preload.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "extraMetadata": {
      "main": "main.js"
    }
  }
}
